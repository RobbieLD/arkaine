{
    "name": "Arkaine",
    "description": "Arkaine chrome extension",
    "version": "1.5",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "icons": {
        "16": "/images/vault.png",
        "32": "/images/vault_01.png",
        "48": "/images/vault_02.png",
        "128": "/images/vault_02.png"
    },
    "options_page": "options.html",
    "action": {
        "default_icon": {
            "16": "/images/vault.png",
            "32": "/images/vault_01.png",
            "48": "/images/vault_02.png",
            "128": "/images/vault_02.png"
        },
        "default_title": "Arkaine",
        "default_popup": "popup.html"
    },
    "update_url": "https://raw.githubusercontent.com/RobbieLD/arkaine/main/Chrome.Arkaine/update.xml"
}
